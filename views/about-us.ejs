                        <div class="form-group">
                            <label class="form-label" for="name">ПІБ</label>
                            <input type="text" class="form-control" id="name" name="name"
                                   placeholder="Прізвище та Ім'я" tabindex="1" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                   tabindex="2" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="subject">Моб. телефон</label>
                            <input type="text" class="form-control bfh-phone" id="phone" name="phone"
