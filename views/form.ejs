<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
            <h2>Нова заявка</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-3">
            <form id="contact-form" class="form" action="#" method="POST" role="form">
                <div class="form-group">
                    <label class="form-label" for="name">ПІБ</label>
                    <input type="text" class="form-control" id="name" name="name"
                           placeholder="Прізвище та Ім'я" tabindex="1" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                           tabindex="2" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="subject">Моб. телефон</label>
                    <input type="text" class="form-control bfh-phone" id="phone" name="phone"
                           placeholder="+ (380)" tabindex="3" data-format="+(380) ddd-dd-dd" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="message">Заявка</label>
                    <textarea rows="5" cols="50" name="message" class="form-control" id="message"
                              placeholder="Текст Вашої заявки..." tabindex="4" required></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-start-order">Надіслати заявку</button>
                </div>
            </form>
        </div>
    </div>
</div>